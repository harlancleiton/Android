<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context="br.harlan.appav2.MainActivity">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <TextView
            android:text="Número\ndo ônibus"
            android:layout_height="45dp"
            android:padding="3dip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/edtNumeroOnibus"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <TextView
            android:text="Conservação\n do ônibus"
            android:padding="3dip" />
        <RatingBar
            android:id="@+id/ratingBarConservacao"
            android:numStars="5"
            android:rating="5.0"
            android:stepSize="0.5"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <TextView
            android:text="Limpeza"
            android:padding="3dip" />
        <RatingBar
            android:id="@+id/ratingBarLimpeza"
            android:numStars="5"
            android:rating="5.0"
            android:stepSize="0.5"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <TextView
            android:text="Direção do\nmotorista"
            android:padding="3dip" />
        <RatingBar
            android:id="@+id/ratingBarMotorista"
            android:numStars="5"
            android:rating="5.0"
            android:stepSize="0.5"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Informações complementares"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/edtInfoComplementares"
            android:layout_height="120dp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Enviar"
            android:id="@+id/btnEnviar"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anexar imagens"
            android:id="@+id/btnAnexar"
            android:layout_column="1" />
    </TableRow>
</TableLayout>