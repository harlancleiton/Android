<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegistroActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center|end"
            android:paddingRight="15dp"
            android:text="AvaliaBus"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_avalia_bus" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edtSenhaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="?attr/colorControlNormal"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/edtRepetiSenhaRegistro"
            android:layout_alignStart="@+id/edtRepetiSenhaRegistro"
            android:layout_alignRight="@+id/edtRepetiSenhaRegistro"
            android:layout_alignEnd="@+id/edtRepetiSenhaRegistro" />

        <EditText
            android:id="@+id/edtRepetiSenhaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtSenhaRegistro"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Repita a Senha"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="?attr/colorControlNormal" />

        <EditText
            android:id="@+id/edtNomeRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtEmailRegistro"
            android:layout_alignEnd="@+id/edtEmailRegistro"
            android:layout_alignLeft="@+id/edtEmailRegistro"
            android:layout_alignRight="@+id/edtEmailRegistro"
            android:layout_alignStart="@+id/edtEmailRegistro"
            android:ems="10"
            android:gravity="center"
            android:hint="Nome"
            android:inputType="textCapWords|textPersonName"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="?attr/colorControlNormal" />

        <EditText
            android:id="@+id/edtEmailRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtSenhaRegistro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="?attr/colorControlNormal" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/masterDetailColor"
        android:gravity="center"
        android:text="Registro"
        android:textColor="@color/textMenuColor" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRegistrar"
        android:layout_alignStart="@+id/btnRegistrar"
        android:layout_alignTop="@+id/btnRegistrar"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="Já tem conta? Faça o login"
        android:textColor="@color/masterDetailColor" />

    <TextView
        android:id="@+id/tvEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Esqueci Minha Senha"
        android:textColor="@color/masterDetailColor"
        android:layout_alignBaseline="@+id/tvLogin"
        android:layout_alignBottom="@+id/tvLogin"
        android:layout_alignRight="@+id/btnRegistrar"
        android:layout_alignEnd="@+id/btnRegistrar" />

</RelativeLayout>
