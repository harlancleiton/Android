<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".view.fragment.AvaliacaoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ônibus"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rbOnibusAvaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="0.5" />

                <CheckBox
                    android:id="@+id/cbOnibusSujo"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O ônibus está sujo" />

                <CheckBox
                    android:id="@+id/cbJanela"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Existe uma ou mais janelas danificadas" />

                <CheckBox
                    android:id="@+id/cbAssentosQuebrados"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O ônibus contém assentos quebrados" />

                <CheckBox
                    android:id="@+id/cbLampadas"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Uma ou mais lâmpadas não estão acendendo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Motorista"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rbMotoristaAvaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="0.5" />

                <CheckBox
                    android:id="@+id/cbMotoristaNaoParou"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O motorista não parou no ponto" />

                <CheckBox
                    android:id="@+id/cbMotoristaCelular"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O motorista está falando no celular enquanto dirige" />

                <CheckBox
                    android:id="@+id/cbMotoristaFreouBruscmente"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O motorista freou bruscamente" />

                <CheckBox
                    android:id="@+id/cbMotoristaVelocidade"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Motorista andando acima da velocidade permitida" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout9"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Segurança"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rbSegurancaAvaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="0.5" />

                <CheckBox
                    android:id="@+id/cbOnibusAssaltado"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O ônibus foi assatado/furtado" />

                <CheckBox
                    android:id="@+id/cbAtosVandalismo"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Atos de vandalismo" />

                <CheckBox
                    android:id="@+id/cbBrigas"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Brigas no coletivo" />

                <CheckBox
                    android:id="@+id/cbOnibusQuebrou"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O ônibus quebrou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Linha"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rbLinhaAvaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="0.5" />

                <CheckBox
                    android:id="@+id/cbLinhaDemorada"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O percurso da linha é muito longo" />

                <CheckBox
                    android:id="@+id/cbLinhaAreasArriscadas"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="O ônibus passa por áreas ariscadas (geograficamente)" />

                <CheckBox
                    android:id="@+id/cbLinhaAssaltada"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Os ônibus dessa linha são assaltados constantemente" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtNumeroOnibus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Número do ônibus"
                    android:inputType="number"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/edtNumeroLinha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Número da linha"
                    android:inputType="number"
                    android:textColor="@color/textColorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtObservacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Observações"
                        android:inputType="textCapWords|textMultiLine" />

                    <ImageView
                        android:id="@+id/ivAnexo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cam_bar_light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cam_bar_light" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cam_bar_light" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cam_bar_light" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cam_bar_light" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cam_bar_light" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/masterDetailColor"
                    android:gravity="center"
                    android:text="Enviar"
                    android:textColor="@color/textMenuColor" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>